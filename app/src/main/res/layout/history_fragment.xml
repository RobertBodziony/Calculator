<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_calculator_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.keczaps.calculator.CalculatorMainActivity"
    tools:showIn="@layout/activity_calculator_main"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">
    <TextView
        android:id="@+id/history_textview"
        android:text="@string/historyStartText"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </TableRow>
</TableLayout>
